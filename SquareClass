using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ShapeCalculations
{

        public class Square
        {
        /// <summary>
        ///This code is designed to set the paramters of the Square Class and enable the paramters to be set and used
        /// </summary>
        public int _height;
        public int _width;

        public Square(int height, int width)
        {
            Console.WriteLine("Constructor is working");
            Height = height;
            Width = width;
        }

        public int Height { get => _height; set => _height = value; }
        public int Width { get => _width; set => _width = value; }
        public int CalcualateArea { get => Height * Width; }
        public int CalcualateParametor { get => (Height * 2) + (Width * 2); }

        public enum Shape
        {
            Square,
            Triangle,
            Circle,
        }
        public void EnumParseShapeAnswer(String chosenSquare)
        {
            Shape newShape = (Shape)Enum.Parse(typeof(Shape), chosenSquare);
        }
    }
}
